# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your environment variables
# For local development, you can use the default values
# For production, update with your actual values

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API server port (default: 3001)
PORT=3001

# API base URL for the frontend to connect to
# For local development: http://localhost:3001
# For production: https://your-domain.com or https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
# For local development: http://localhost:3000
# For production: https://your-frontend-domain.com
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multi_analysis
DB_USER=postgres
DB_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT secret for authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-in-production

# =============================================================================
# AWS CONFIGURATION (for production)
# =============================================================================
# AWS credentials and settings
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
# Worker service port
WORKER_PORT=3002

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
